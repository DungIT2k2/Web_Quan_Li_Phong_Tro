<div class="mt-4">
    <a href="/manage" class="btn btn-primary btn-back"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16"
            fill="currentColor" class="bi bi-arrow-left" viewBox="0 0 16 16">
            <path fill-rule="evenodd"
                d="M15 8a.5.5 0 0 0-.5-.5H2.707l3.147-3.146a.5.5 0 1 0-.708-.708l-4 4a.5.5 0 0 0 0 .708l4 4a.5.5 0 0 0 .708-.708L2.707 8.5H14.5A.5.5 0 0 0 15 8" />
        </svg> Trở về trang chủ</a>
    <h3 class="text-center">Thêm điện nước tháng mới</h3>
    <form action="/ultility/save" method="POST">
        <div class="d-flex justify-content-center mt-4">
            <div class="me-2">
                <label for="month" class="form-label">Tháng</label>
                <select class="form-select" id="cbMonth" name="month">
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                    <option value="4">4</option>
                    <option value="5">5</option>
                    <option value="6">6</option>
                    <option value="7">7</option>
                    <option value="8">8</option>
                    <option value="9">9</option>
                    <option value="10">10</option>
                    <option value="11">11</option>
                    <option value="12">12</option>
                </select>
            </div>
            <div class="ms-2">
                <label for="year" class="form-label">Năm</label>
                <select class="form-select" id="cbYear" name="year">
                    <option value="2023">2023</option>
                    <option value="2024">2024</option>
                    <option value="2025">2025</option>
                </select>
            </div>
        </div>
        <table class="table mt-4">
            <thead>
                <tr>
                    <th scope="col">Tên Phòng</th>
                    <th scope="col">Điện</th>
                    <th scope="col">Nước</th>
                </tr>
            </thead>
            <tbody>
                {{#each Room}}
                <tr>
                    <td>{{this.name}}</td>
                    <td><input type="text" class="form-control" id="{{this._id}}" name="electricity"></td>
                    <td><input type="text" class="form-control" id="{{this._id}}" name="water"></td>
                </tr>
                {{/each}}
            </tbody>
        </table>
        <div class="text-center">
            <button type="submit" class="btn btn-primary">Lưu</button>
        </div>
    </form>
</div>